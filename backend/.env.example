# Environment Variables for pdfhustle Backend
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/pdfhustle?schema=public"

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Stripe (optional - for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ILovePDF API (for PDF editing, compression, merge)
ILOVEPDF_PUBLIC_KEY=your_ilovepdf_public_key
ILOVEPDF_SECRET_KEY=your_ilovepdf_secret_key
